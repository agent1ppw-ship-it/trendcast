generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}

model Organization {
  id               String   @id @default(uuid())
  name             String
  tier             String   @default("INTRO") // INTRO, PRO, ULTIMATE, ENTERPRISE
  industry         String
  stripeCustomerId String?
  credits          Int      @default(50)
  extracts         Int      @default(10)
  createdAt        DateTime @default(now())
  
  users            User[]
  leads            Lead[]
  jobs             Job[]
  aiSettings       AiConfig?
}

model User {
  id             String    @id @default(uuid())
  orgId          String?   // Make orgId optional since NextAuth creates the user first
  organization   Organization? @relation(fields: [orgId], references: [id])
  name           String?
  email          String?   @unique
  emailVerified  DateTime?
  image          String?
  role           String    @default("USER") // ADMIN, USER
  createdAt      DateTime  @default(now())
  
  accounts       Account[]
  sessions       Session[]
}

// NextAuth Required Models
model Account {
  id                 String  @id @default(uuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?  @db.Text
  access_token       String?  @db.Text
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?  @db.Text
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(uuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Lead {
  id             String   @id @default(uuid())
  orgId          String
  organization   Organization @relation(fields: [orgId], references: [id])
  name           String
  phone          String?
  address        String?
  source         String   @default("SCRAPER") // ORGANIC, SCRAPER, MANUAL
  leadScore      Int      @default(0)
  status         String   @default("NEW") // NEW, CONTACTED, QUOTED, WON, LOST
  isRevealed     Boolean  @default(false)
  createdAt      DateTime @default(now())
}

model AiConfig {
  id             String   @id @default(uuid())
  orgId          String   @unique
  organization   Organization @relation(fields: [orgId], references: [id])
  systemPrompt   String   @db.Text
  autoReplySMS   Boolean  @default(false)
  autoSchedule   Boolean  @default(false)
  twilioNumber   String?
}

model Job {
  id             String   @id @default(uuid())
  orgId          String
  organization   Organization @relation(fields: [orgId], references: [id])
  title          String
  status         String   @default("PENDING") // PENDING, SCHEDULED, COMPLETED, INVOICED
  scheduledFor   DateTime?
  createdAt      DateTime @default(now())
}
